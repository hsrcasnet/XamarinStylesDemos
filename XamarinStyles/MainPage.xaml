<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinStyles.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Xamarin Styles Demo">

    <StackLayout
        Padding="20"
        Spacing="20"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center">

        <!-- Demo 1: Explicit Styles -->
        <Button
            Clicked="NavigateToExplicitStylesPage"
            Text="Demo 1: Explicit Styles" />

        <!-- Demo 2: Implicit Styles -->
        <Button
            Clicked="NavigateToImplicitStylesPage"
            Text="Demo 2: Implicit Styles" />

        <!-- Demo 3: Global Styles -->
        <Button
            Clicked="NavigateToGlobalStylesPage"
            Text="Demo 3: Global Styles" />

    </StackLayout>
</ContentPage>
